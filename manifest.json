{
  "manifest_version": 3,
  "name": "Language Translator",
  "version": "1.0",
  "description": "Translate text to different languages.",
  "permissions": ["activeTab", "contextMenus"],  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/logo.jpg",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/logo.jpg",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
